<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="返回"
                android:backgroundTint="#A4D1F2"
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="任务详情"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="80dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <!-- 任务内容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="任务内容"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_task_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="任务内容"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- 老人信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="老人信息"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_elder_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名：张三\n电话：13800138000\n地址：北京市朝阳区xxx街道xxx号"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- 志愿者信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="志愿者信息"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_volunteer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名：李四"
                android:textSize="16sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <!-- 任务信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="积分奖励"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_points_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textColor="#FF6B6B"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="任务状态"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="已接单"
                        android:textSize="18sp"
                        android:textColor="#4CAF50"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="创建时间"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2026-02-11 12:00:00"
                    android:textSize="14sp"
                    android:textColor="#999999"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 凭证信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="凭证信息"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_evidences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂无凭证"
                android:textSize="14sp"
                android:textColor="#999999"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- 任务操作按钮 -->
        <LinearLayout
            android:id="@+id/ll_task_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="接取任务"
                android:backgroundTint="#A4D1F2"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="开始服务"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#A4D1F2"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="提交完成"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#A4D1F2"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btn_appeal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="提交申诉"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#A4D1F2"
                android:textColor="#333333"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>