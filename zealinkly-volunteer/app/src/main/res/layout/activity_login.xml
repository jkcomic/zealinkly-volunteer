<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="64dp"
        android:paddingHorizontal="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智链邻里"
            android:textSize="28sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="志愿者服务"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tab_card_login"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="刷卡/拍照登录"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tab_account_login"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="账号密码登录"
                android:textColor="#757575"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_card_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_background">
                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="点击拍照\n扫描身份证"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请将身份证或社区卡正面朝向镜头"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="32dp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_background">
                <Button
                    android:id="@+id/btn_select_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="从相册选择照片"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_account_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:hint="用户名"
                android:background="@drawable/edittext_border"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:hint="密码"
                android:background="@drawable/edittext_border"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_background">
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="登录"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:background="@android:color/transparent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>