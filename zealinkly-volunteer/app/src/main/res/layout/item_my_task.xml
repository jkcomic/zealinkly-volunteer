<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:backgroundTint="#F5F5F5">

    <TextView
        android:id="@+id/tv_task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任务内容"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_elder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发布人：张三"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tv_points_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分奖励：10"
            android:textSize="14sp"
            android:textColor="#FF6B6B"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2026-02-11 12:00:00"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态：已接单"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:background="#E8F5E8"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:radius="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_start_task"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="开始服务"
            android:textSize="14sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_corner_background"
            android:backgroundTint="#A4D1F2"
            android:paddingHorizontal="12dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_submit_task"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="提交完成"
            android:textSize="14sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_corner_background"
            android:backgroundTint="#A4D1F2"
            android:paddingHorizontal="12dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_view_detail"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="查看详情"
            android:textSize="14sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_corner_background"
            android:backgroundTint="#A4D1F2"
            android:paddingHorizontal="12dp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>